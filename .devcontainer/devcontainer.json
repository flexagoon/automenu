{
  "name": "Julia",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/julialang/devcontainer-features/julia:1": {
      "channel": "release"
    }
  },

  "runArgs": [
    "--userns=keep-id:uid=1000,gid=1000"
  ],
  "containerUser": "vscode",
  "updateRemoteUserUID": true,
  "containerEnv": {
    "HOME": "/home/vscode"
  }
}
