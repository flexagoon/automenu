{
  "name": "Alpine",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/julialang/devcontainer-features/julia:1": {
      "channel": "release"
    }
  },

  // "workspaceMount": "",
  "runArgs": [
    //   "--cap-add=SYS_PTRACE",
    //   "--security-opt",
    //   "seccomp=unconfined",
    //   "--volume=${localWorkspaceFolder}:/workspaces/${localWorkspaceFolderBasename}:Z",
